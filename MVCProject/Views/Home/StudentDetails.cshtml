@model MVCProject.Models.StudentM

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<table class="table">
    <tr>
        <th>Id</th>
        <td>@Model.StudentID</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Date of Birth</th>
        <td>@Model.DateOfBirth.ToShortDateString()</td>
    </tr>
</table>

<p>
    <a asp-action="Students" class="btn btn-primary">Back to List</a>
</p>
